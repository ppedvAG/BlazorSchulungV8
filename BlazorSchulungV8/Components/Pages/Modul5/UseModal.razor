@page "/modal"
<h3>UseModal</h3>
<button  class="btn btn-primary" @onclick="Toggle">
    Launch demo modal
</button>


<Modalppedv @ref="modal1" Titel="Hallo Welt!" OnSave="save" FocusElement="input1">
    <div><label>Eingabe</label>
        <input class="form-control" @bind="Eingabe"  @ref="input1"/>
    </div>
</Modalppedv>

@code {
    Modalppedv modal1;
    string Eingabe;
    ElementReference input1;
    void Toggle()
    {
        modal1.Show();
    }
    void save()
    {
        modal1.Show();
        Eingabe = "";
    }

}
