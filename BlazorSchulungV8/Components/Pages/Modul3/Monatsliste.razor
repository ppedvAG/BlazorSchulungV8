@page "/monat"
<h3>Monatsliste</h3>


<div class="container text-center">
    <div class="row">
        <div class="col-12 col-md-6">
            gewählte Monat:
            <h1>@Monat</h1>
        </div>
        <div class="col-12 col-md-6">
            <ul class="list-group">
                <li class="list-group-item active ">Monate</li>
                @for (int i = 0; i < 12; i++)
                {
                    var m = i;
                    <li class="list-group-item list-group-item-action @(SelectedMonat==m?"list-group-item-secondary":"")"
                    @onclick="()=>Select(m)">
                        @DateTime.Now.AddMonths(i).ToString("MMMM")
                    </li>
                   
                }

            </ul>
        </div>

    </div>
</div>
@code {
    string Monat;
    int SelectedMonat;
    void Select(int m)
    {
        SelectedMonat = m;
        Monat = @DateTime.Now.AddMonths(m).ToString("MMMM");
    }
}
